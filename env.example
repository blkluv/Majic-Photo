# Copy to .env and fill in values

# Database
MONGO_URI=mongodb://mongo:27017/photo_enhancer

# JWT Secret for auth
JWT_SECRET=your_jwt_secret_here

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# S3 Storage (Linode Object Storage - S3 compatible)
S3_ENDPOINT=https://us-east-1.linodeobjects.com  # Adjust to your Linode region
S3_ACCESS_KEY=your_linode_access_key
S3_SECRET_KEY=your_linode_secret_key
S3_BUCKET=your_bucket_name

# For local Minio testing (comment out for production)
# S3_ENDPOINT=http://minio:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET=photos